<Page
    x:Class="ProyectoDSI.Mapa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProyectoDSI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">
    
    <Page.Resources>
        <FontFamily x:Key="Alata" >ms-appx:///Assets/Alata-Regular.ttf#Alata</FontFamily>
        <Style x:Key="StraightButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Alata"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Width" Value="210"/>
            <Setter Property="Height" Value="45"/>
        </Style>
        <!-- BOTÓN CIRCULAR NO ACTIVO -->
        <Style x:Key="CircleButtonNotSelected" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
        </Style>
        <!-- BOTÓN CIRCULAR ACTIVO -->
        <Style x:Key="CircleButtonSelected" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="70"/>
        </Style>
        <!-- BOTÓN DE NIVEL -->
        <Style x:Key="LevelButton" TargetType="Button">
            <Setter Property="CornerRadius" Value="60"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Imagen de fondo -->
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Mapa/mapUpscaled.jpeg"/>
        </Grid.Background>
        
        <!-- Zona (grid) de botones superiores -->
        <Grid>
            <!-- Definiciones de filas y columnas -->
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <!-- BOTONES -->
            <!-- Botón atrás -->
            <Button Style="{StaticResource CircleButtonNotSelected}"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Click="BackButton_OnClick">
                <Image Source="Assets/backButton.png"/>
            </Button>
            <!-- Botón agentes -->
            <Button Style="{StaticResource StraightButton}"
                    Content="AGENTES"
                    Click="AgentsButton_OnClick"
                    Grid.Column="1"
                    HorizontalAlignment="Right"/>
            <!-- Botón mapa -->
            <Button Style="{StaticResource CircleButtonSelected}"
                    Grid.Column="2"
                    HorizontalAlignment="Center"
                    Click="BackButton_OnClick">
                <Image Source="Assets/Mapa/mapButton.png"
                       Width="60"
                       Height="60"
                       HorizontalAlignment="Center"/>
            </Button>
            <!-- Botón reclutamiento -->
            <Button Style="{StaticResource StraightButton}"
                    Content="RECLUTAMIENTO"
                    Click="RecruitmentButton_OnClick"
                    Grid.Column="3"/>
            <!-- Botón opciones -->
            <Button Style="{StaticResource CircleButtonNotSelected}"
                    Grid.Column="4"
                    HorizontalAlignment="Center"
                    Click="OptionsButton_OnClick">
                <Image Source="Assets/optionsButton.png"/>
            </Button>
        </Grid>

        <!-- NIVELES -->
        <!-- Nivel 1 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="17,310,1163,310">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
        <!-- Nivel 2 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="314,161,866,459">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
        <!-- Nivel 3 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="363,597,817,23">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
        <!-- Nivel 4 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="673,540,507,80">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
        <!-- Nivel 5 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="638,238,542,382">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
        <!-- Nivel 6 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}"
                Margin="830,73,350,547">
            <Image Source="Assets/Mapa/location.png" />
        </Button>
        <!-- Nivel 7 -->
        <Button Click="LevelButton_OnClick"
                Style="{StaticResource LevelButton}" 
                Margin="1127,232,53,388">
            <Image Source="Assets/Mapa/location.png"/>
        </Button>
    </Grid>
</Page>
